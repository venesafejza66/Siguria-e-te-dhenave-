#include <iostream>
#include <string>
#include <map>

using namespace std;

// Krijimi i një harte për të përfaqësuar kodin Tap Code
map<char, string> tapCodeMap = {
    {'A', "11"}, {'B', "12"}, {'C', "13"}, {'K', "14"}, {'D', "15"},
    {'E', "21"}, {'F', "22"}, {'G', "23"}, {'H', "24"}, {'I', "25"},
    {'J', "31"}, {'L', "32"}, {'M', "33"}, {'N', "34"}, {'O', "35"},
    {'P', "41"}, {'Q', "42"}, {'R', "43"}, {'S', "44"}, {'T', "45"},
    {'U', "51"}, {'V', "52"}, {'W', "53"}, {'X', "54"}, {'Y', "55"},
    {'Z', "24"}, // Z zëvendësohet me H në Tap Code
    {' ', "00"}, // Hapsirat trajtohen si '00'
    {'$', "02"}, // Karakteri speciale $
    {'%', "03"}, // Karakteri speciale %
    {'&', "04"}, // Karakteri speciale &
    {'#', "05"}  // Karakteri speciale #
};

// Funksioni për të krijuar kodin Tap Code nga një tekst hyrës
string encodeTapCode(const string& input) {
    string encodedText = "";
    for (char c : input) {
        // Nëse karakteri është në harten e kodit Tap Code
        if (tapCodeMap.find(toupper(c)) != tapCodeMap.end()) {
            encodedText += tapCodeMap[toupper(c)] + " ";
        } else {
            // Karakteret tjera të pa njohura trajtohen si '??'
            encodedText += "?? ";
        }
    }
    return encodedText;
}

int main() {
    string inputText;
    cout << "Shkruani tekstin që dëshironi të enkodoni me Tap Code: ";
    getline(cin, inputText);

    string encodedText = encodeTapCode(inputText);
    cout << "Teksti i enkoduar me Tap Code: " << encodedText << endl;

    return 0;
}
